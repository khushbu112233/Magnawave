                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <FrameLayout

                        android:id="@+id/frame_img_pat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_pat"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                          />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frame_img_pat_rotated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_pat_rotated"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"

                            android:src="@mipmap/horse_new" />

                    </FrameLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/light_grey1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                   >

                <ImageView
                    android:id="@+id/img_flip"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/flip_blue" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <com.jlouistechnology.magnawave.Fonts.TextView_bld
                            android:id="@+id/txt_pat_name"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:text="CLIENT NAME"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_blue"
                            android:textSize="14sp" />

                        <com.jlouistechnology.magnawave.Fonts.TextView_Regular
                            android:id="@+id/txt_client_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:text="CLIENT NAME"
                            android:textColor="@color/dark_blue"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.jlouistechnology.magnawave.Fonts.TextView_bld
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="17dp"
                        android:text="11 May 2017"
                        android:textColor="@color/light_grey"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey1"></View>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_pat_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:scrollbars="vertical"

                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>