<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorAccent">


                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:src="@mipmap/menu"
                    android:layout_marginTop="6dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentLeft="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:src="@mipmap/back"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/txt_menu"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"

                    android:src="@mipmap/heading"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>
        <FrameLayout
        android:id="@+id/frame_main_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        >
            <FrameLayout android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout android:id="@+id/swipe_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:weightSum="1">

                    <com.jlouistechnology.magnawave.Fonts.TextView_bld
                        android:id="@+id/txt_home"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"

                        android:padding="10dp"
                        android:text="HOME"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:visibility="visible" />

                    <com.jlouistechnology.magnawave.Fonts.TextView_bld
                        android:id="@+id/txt_clients"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"

                        android:padding="10dp"
                        android:background="@color/blue"
                        android:text="ADD / VIEW CLIENTS"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"

                        android:visibility="visible" />

                    <com.jlouistechnology.magnawave.Fonts.TextView_bld
                        android:id="@+id/txt_add_record"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"

                        android:padding="10dp"
                        android:text="ADD REPORT"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"

                        android:visibility="visible" />

                    <com.jlouistechnology.magnawave.Fonts.TextView_bld
                        android:id="@+id/txt_view_reports"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"

                        android:padding="10dp"
                        android:background="@color/blue"
                        android:text="VIEW REPORTS"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"

                        android:visibility="visible" />

                    <com.jlouistechnology.magnawave.Fonts.TextView_bld
                        android:id="@+id/txt_search"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"

                        android:padding="10dp"
                        android:background="@color/blue"
                        android:text="SEARCH"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"

                        android:visibility="visible" />


                    <com.jlouistechnology.magnawave.Fonts.TextView_bld
                        android:id="@+id/txt_settings"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:text="SETTINGS"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"

                        android:visibility="visible" />

                    <com.jlouistechnology.magnawave.Fonts.TextView_bld
                        android:id="@+id/txt_guide"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:text="GUIDELINES"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"

                        android:visibility="visible" />

                    <com.jlouistechnology.magnawave.Fonts.TextView_bld
                        android:id="@+id/txt_temp"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"

                        android:visibility="visible"
                        />
                </LinearLayout>



            </RelativeLayout>


        </FrameLayout>
    </LinearLayout>
</layout>